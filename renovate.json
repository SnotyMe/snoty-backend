{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ignorePaths": [
      "version.gradle.kts"
  ],
  "separateMinorPatch": true,
  "packageRules": [
    {
      "updateTypes": ["patch"],
      "enabled": false
    },
    {
      "matchFileNames": ["infra/monitoring/**"],
      "matchUpdateTypes": ["minor"],
      "enabled": false
    }
  ]
}
